!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Tankdrop"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = javascript_include_tag "application"


    = stylesheet_link_tag "application", :media => "all"
    %link(href="favicon.ico" rel="shortcut icon")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")
    = yield :head
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "TankDrop", root_path, :class => "brand"
          .container.nav-collapse
            %ul.nav
              %li= link_to "About", "/path1"
              %li= link_to "PH Item Sellers Community", "/path2"
              %li= link_to "DiabloPH", "/path3"
            .div.pull-right
              %form.navbar-search
                = text_field_tag "Search", '', :placeholder => "Minimum Budget", :class => "span2"
                %select.span1
                  %option
                    Gold
                  %option
                    PHP
              .nav
                %a.btn
                  %i.icon-cog
                  Settings
                - if current_user
                  = link_to "Sign out", signout_path, id: "sign_out", :class => "btn btn-danger"
                - else
                  = link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", :class => "btn btn-primary"
    .container

      .content
        .row
          .span12
            = yield
    
      %footer
        %p &copy; Nuked Apps 2012
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    =yield :footer

